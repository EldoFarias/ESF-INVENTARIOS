            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtQtdContado1"
            app:layout_constraintEnd_toStartOf="@+id/txtQtdContado3"
            app:layout_constraintHorizontal_bias="0.5"
