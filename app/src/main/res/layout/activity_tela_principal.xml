            android:background="@color/color_primary_urbano"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/branco"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtTotalPcsPrimeiraCont"
