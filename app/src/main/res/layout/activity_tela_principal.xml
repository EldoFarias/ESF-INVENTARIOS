            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtQtdContado2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txtQtdContado2"
            app:layout_constraintTop_toTopOf="@+id/txtQtdContado2" />


        <TextView
            android:id="@+id/textView30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_primary_urbano"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="QTD pç 2º CONT."
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtQtdContado2"
            app:layout_constraintEnd_toEndOf="@+id/txtQtdContado2"
            app:layout_constraintStart_toStartOf="@+id/txtQtdContado2"
            app:layout_constraintTop_toTopOf="@+id/txtQdtContadoCabecalho" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_primary_urbano"
            android:ellipsize="end"
