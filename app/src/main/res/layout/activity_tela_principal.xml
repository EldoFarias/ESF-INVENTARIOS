            app:layout_constraintStart_toStartOf="@+id/txtTotalPcsSegundaCont"
            app:layout_constraintTop_toTopOf="@+id/textView25"
            app:layout_constraintVertical_bias="1.0" />


        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_primary_urbano"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="ITENS 3º CONT."
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtTotalPcsTerceiraCont"
            app:layout_constraintEnd_toEndOf="@+id/txtTotalPcsTerceiraCont"
            app:layout_constraintStart_toStartOf="@+id/txtTotalPcsTerceiraCont"
            app:layout_constraintTop_toTopOf="@+id/textView26" />


        <TextView
            android:id="@+id/txtQdtContadoCabecalho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/color_primary_urbano"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="2dp"
            android:text="QTD pç 1º CONT."
            android:textAlignment="center"
            android:textColor="@color/branco"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/txtQtdContado1"
