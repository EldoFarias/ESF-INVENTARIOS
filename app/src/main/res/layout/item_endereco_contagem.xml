<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_primary_urbano"
    android:padding="8dp">

    <TextView
        android:id="@+id/txtCodigoEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000"
        android:textColor="@color/branco"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNomeEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="ParedÃ£o de pallets"
        android:textColor="@color/branco"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCodigoEndereco" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="@color/branco"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomeEndereco" />

    <ImageView
        android:id="@+id/imgTelaEndereco"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCodigoEndereco"
        app:srcCompat="@drawable/escolha_topico" />

    <ImageView
        android:id="@+id/imgCont1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgCont2"
        app:layout_constraintEnd_toStartOf="@+id/imgCont2"
        app:layout_constraintTop_toTopOf="@+id/imgCont2"
        app:srcCompat="@drawable/contagem1_32x32" />

    <ImageView
        android:id="@+id/imgCont2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgCont3"
        app:layout_constraintEnd_toStartOf="@+id/imgCont3"
        app:layout_constraintTop_toTopOf="@+id/imgCont3"
        app:srcCompat="@drawable/contagem2_32x32" />

    <ImageView
        android:id="@+id/imgCont3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgTelaEndereco"
        app:layout_constraintEnd_toStartOf="@+id/imgTelaEndereco"
        app:layout_constraintTop_toTopOf="@+id/imgTelaEndereco"
        app:srcCompat="@drawable/contagem3_32x32" />

</androidx.constraintlayout.widget.ConstraintLayout>