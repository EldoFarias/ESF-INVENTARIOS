<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemContado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtCodigoItem"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:layout_weight=".6"
        android:background="@drawable/shape_editi_text"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="7896046100101"
        android:textColor="@color/preto"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtDescricaoItem"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="@drawable/shape_editi_text"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="2dp"
        android:text="Descrição de teste com varia"
        android:textColor="@color/preto"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtQuantidadeItem"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="2dp"
        android:layout_weight=".4"
        android:background="@drawable/shape_editi_text"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="100"
        android:textColor="@color/preto"
        android:textSize="12sp" />
</LinearLayout>